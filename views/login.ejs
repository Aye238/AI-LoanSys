<%- include('partials/header', { title: 'Login' , page_css: 'form.css' , body_class: 'page-auth' , user: null,
	success_msg: typeof success_msg !=='undefined' ? success_msg : '' , error_msg: typeof error_msg !=='undefined' ?
	error_msg : '' }) %>

	<div class="auth-card">
		<h2>Login</h2>

		<a href="/auth/google" class="btn-google">
			<img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo">
			Login with Google
		</a>

		<div class="divider"><span>OR</span></div>

		<form action="/auth/login" method="POST" class="auth-form">
			<div class="form-group">
				<label for="username">Username</label>
				<input type="text" id="username" name="username" required>
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" id="password" name="password" required>
			</div>
			<button type="submit" class="submit-btn">Login</button>
		</form>

		<p class="bottom-link">Don't have an account? <a href="/auth/register">Register</a></p>
	</div>

	<%- include('partials/footer') %>